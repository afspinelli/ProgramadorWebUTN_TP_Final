<div class="row" style="margin:10px auto">
    <div class="col">
        <p class="text-end">
            <span>Hola {{userName}}!</span>
            <a href="/admin/login/logout" class="btn btn-danger">LogOut<i class="fasfa-sign-out-alt"></i></a>
        </p>
    </div>
</div>

<div class="container v-100 justify-content-center align-items-center" style="margin:50px auto">
    <div class="row">
        <div class="col-7" style="margin-top:-30px">
            <h2>Tutorials List</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/tutorials/add" class="btn btn-success"><i class="fas fa-plus"></i> New</a>
        </div>
    </div>

    <table class="table table-hover align-middle" style="background-color:#2be2ca56">
        <thead>
            <tr class="table-dark">
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each tutorials}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{title}}</td>
                <td class="text-end">
                    <a href="/admin/tutorials/edit/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                    <a href="/admin/tutorials/delete/{{id}}" class="btn btn-secondary" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fas fa-trash"></i></a>
                </td>
                {{/each}}
            </tr>
        </tbody>
    </table>
</div>